@page "/weightseries"
<RadzenChart>
    <RadzenLineSeries Data="@_data" CategoryProperty="Time" Title="Gewicht" LineType="LineType.Dashed" ValueProperty="Weight">
        <RadzenMarkers MarkerType="MarkerType.Square" />
        <RadzenSeriesDataLabels Visible="true" />
    </RadzenLineSeries>
    <RadzenValueAxis Formatter="@FormatAsWeight">
        <RadzenGridLines Visible="true" />
        <RadzenAxisTitle Text="Gewicht in t" />
    </RadzenValueAxis>
</RadzenChart>
